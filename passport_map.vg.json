{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Passport Index",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    "transform": [
      {
        "lookup": "Name_EN",
        "from": {
          "data": {
            "url": "henleypassportindex.csv"
          },
          "key": "Country",
          "fields": ["COUNTRY", "RANK", "ACCESS_TO_COUNTRIES", "YEAR"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Number of Countries that can be travelled to without a visa", 
        "type": "quantitative",
        "scale": {
            "type": "threshold",
            "domain": [50, 100, 150],
            "range": ["#fdbe85","#fd8d3c","#e6550d"]
        }
      },
      "tooltip": [
        {"field": "COUNTRY", "type": "nominal", "title": "Country"},
        {"field": "ACCESS_TO_COUNTRIES", "type": "quantitative"}
      ]
    }
  }