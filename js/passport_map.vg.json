{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Passport Power Index",
  "width": 400,
  "height": 800,
  "projection": {"type": "equalEarth"},
  "data": {
      "url": "https://raw.githubusercontent.com/ravindi-r/fit3179_vis2/main/data/henleypassportindex.csv"
  },
  "transform": [
      {
          "lookup": "COUNTRY",
          "from": {
              "data": {
                  "url": "https://raw.githubusercontent.com/ravindi-r/fit3179_vis2/main/data/ne_110m.json",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
              "key": "properties.NAME_LONG",
              "fields": ["properties","type","geometry"]
          }
      },
      {
          "filter": "datum.YEAR == year_selection"
      }
  ],
  "params": [
    {
      "name": "year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer":[
      {
          "mark": {
              "type": "geoshape", 
              "fill": "white", 
              "stroke": "darkgray"
          },
          "encoding": {
              "tooltip": [
                      {
                          "field": "properties.NAME_LONG",
                          "type": "nominal",
                          "title": "Country"
                      }
              ]  
          }
      },
      {
          "mark": {
            "type": "geoshape",
            "stroke": "gray"
          },
          "encoding": {
              "color": {
                  "field": "ACCESS_TO_COUNTRIES",
                  "type": "quantitative",
                  "scale": {
                      "type": "threshold",
                      "domain": [50,100,150],
                      "range": ["#ffffcc","#c2e699","#78c679","#238443"]
                  },
                  "legend": {
                      "title": ["Number of", "Accessible", "Countries"]
                  }
              },
              "tooltip":[
                  { 
                      "field": "properties.NAME_LONG",
                      "type": "nominal",
                      "title": "Country"
                  },
                  {
                      "field": "RANK",
                      "type": "quantitative",
                      "title": "Rank"
                  },
                  {
                      "field": "ACCESS_TO_COUNTRIES",
                      "type": "quantitative",
                      "title": "No. of Accessible Countries"
                  }
              ]
          }
      }
  ]
}
