{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Passport Index",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/ravindi-r/fit3179_vis2/main/data/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
    "transform": [
        {
          "lookup": "Name_EN",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ravindi-r/fit3179_vis2/main/data/henleypassportindex.csv"
            },
            "key": "Country",
            "fields": ["COUNTRY", "RANK", "ACCESS_TO_COUNTRIES", "YEAR"]
          }
        }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "RANK",
            "type": "quantitative",
            "legend": {"title": "Passport Rank"},
            "scale": {
              "type": "threshold",
              "domain": [50,100,150]
            }
        }
    }
}